<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.demo.yiman.widget.CustomRoundAngleImageView
        android:id="@+id/iv_new_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_like"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:radius="6dp" />

    <TextView
        android:id="@+id/tv_new_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="@color/bg_back"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_new_top"
        app:layout_constraintStart_toStartOf="@+id/iv_new_top"
        app:layout_constraintTop_toBottomOf="@+id/iv_new_top" />
</android.support.constraint.ConstraintLayout>